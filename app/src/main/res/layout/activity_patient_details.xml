<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99d0c8"
    tools:context=".PatientDetailsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_PD_head"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="WELCOME "
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_PD_user_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="25dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_PD_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="50dp"
                    android:text="Name :"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_PD_patient_name"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=" "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_PD_Phnnum"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Phone no.:"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_PD_patient_phnnum"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_PD_result"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Result :"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_PD_patient_result"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_PD_join_date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:text="Join Date :"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_PD_patient_joinedDate"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="20dp" />
            </LinearLayout>
-->
            <Button
                android:id="@+id/bt_PD_view_diet"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/sign_in_button"
                android:padding="15dp"
                android:text="View Diet"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/bt_PD_view_days_left"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/transbutton"
                android:padding="15dp"
                android:text="How many days Left"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>